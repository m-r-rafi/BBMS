
@{
    ViewBag.Title = "EditPassword";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<h2>EditPassword</h2>

<div class="row" ng-app="my-app">
    <div class="col-md-6 col-md-offset-3">
        <div class="well bs-component">
            <div ng-controller="signUpCtrl">
                <form class="form-horizontal" ng-submit="signUp()" method="post">
                    <fieldset>
                        <legend>Edit</legend>
                        <div class="form-group">
                            <label for="inputPassword" class="col-lg-4">Current Password:</label>
                            <div class="col-lg-8">
                                <input type="password" class="form-control" ng-model="l.Password" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-lg-4">New Password:</label>
                            <div class="col-lg-8">
                                <input type="password" class="form-control" ng-model="l.Password" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-lg-4">Confirm Password:</label>
                            <div class="col-lg-8">
                                <input type="password" class="form-control" placeholder="Confirm Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-8 col-lg-offset-4">
                                <button type="submit" class="btn btn-primary">Save Changes</button><br />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>

        </div>
    </div>

</div>