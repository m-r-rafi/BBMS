
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well bs-component">
            <form class="form-horizontal" method="post">
                <fieldset>
                    <legend>LogIn</legend>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">User</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" name="Email" placeholder="Email or UserName">
                            @*<span class="text-danger">@Html.ValidationMessage("Email")</span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-2 control-label">Password</label>
                        <div class="col-lg-10">
                            <input type="password" class="form-control" name="Password"  placeholder="Password">
                            @*<span class="text-danger">@Html.ValidationMessage("Password")</span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">

                            @*<button type="submit" class="btn btn-primary">LogIn</button><br />*@
                            <a class="btn btn-primary" href="/Account/Dashboard">LogIn</a>
                            <span>Don't Have an account? </span>
                            <a href="/Account/SignUp">Sign Up</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

</div>

